<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bungee+Spice&family=Fugaz+One&display=swap" rel="stylesheet">
</head>
    <title>Buscador de servicios AWS</title>
</head>
<body>
    <div class="encabezado">
        <div class="cont-encabezado">
            <header>
                <h1 class="titulo">Calculadora de servicios AWS</h1>
            </header>

        </div>
    </div>
    
    <main class="main">

        <div class="cont-buscador">
            <div class="cont-sec">
                <div class="buscador">
                    <br>
                    <label for="text" class="lbl-buscador">Buscador de Servicio:</label>
                    <input type="text" placeholder="Buscar servicio" class="input-buscador">
                    <button class="btn-buscador">&#128269;</button>  
                    
                    <div class="cont-resultados">
                        <div class="resultados">
                            <br>
                            <ul id="myList">
                                
                            </ul>
                        </div>
                    </div>
                </div>
                     
                
            </div>
        
        </div>
        <div class="cont-calc">
            <div class="calculator">
                <h4 id="txt-area-click"></h4> 

                
            </div>    

    </div>
        
        
    </main>
    <script >
        const datos={
    1:"EC2",
    2:"S3",
    3:"CloudFront",
    4:"Fargate",
    5:"Lambda",
    6:"Dynamo DB",
    7:"VPC",
    8:"Amazon RDS",
    9:"Amazon Storage Gateway",
    10:"Amazon Cognito",
    11:"AWS Aurora",

}

const ul = document.getElementById('myList');
const displayArea = document.getElementById('txt-area-click')
let sumarTotl = 0;
let cadenasSeleccionadas = [];

for (const key in datos) {
    if (datos.hasOwnProperty(key)) {
        const dato = datos[key];
        var li = document.createElement('li');
        li.textContent = dato;
        ul.appendChild(li);
        li.addEventListener('click', function(){
            cadenasSeleccionadas.push(dato);
            sumarTotl++;
            displayArea.innerHTML = 'Suma total de servicios: '  + sumarTotl + "<br>" + 'Elementos seleccionados: ' + cadenasSeleccionadas.join(", ");
            for (dato in cadenasSeleccionadas){
                alert('El servicio ya fue agregado, seleccione otro.')
            }

        
            
        })
    }
}
    </script>
</body>
</html>